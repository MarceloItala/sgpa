{
    "name": "sgpa/sistema-gestao-processos-aduaneiros",
    "description": "Sistema de Gest√£o de Processos Aduaneiros - Multi-tenant",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "firebase/php-jwt": "^6.4",
        "monolog/monolog": "^3.3",
        "phpmailer/phpmailer": "^6.8",
        "respect/validation": "^2.2",
        "robmorgan/phinx": "^0.13.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SGPA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SGPA\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    }
}
